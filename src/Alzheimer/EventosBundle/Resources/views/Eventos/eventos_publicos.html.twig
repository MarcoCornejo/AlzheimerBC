{% extends '::frontend.html.twig' %}

{% block body -%}


<div class="row">
	<div class="small-2 large-4 columns">
		<h2>Eventos</h2><br><br>
	</div><br><br><br>			
</div>
<!--Eventos Recientes-->
<div class="row">
		<div class="panel panel-body">
			<div id="noticia">
				<ul >
					{% if entities %}

					{% for entity in entities %}									
					<li>			
						<div class="row">					
							<div class="small-6 columns">
								<a href="#" data-reveal-id="modal{{ entity.id }}">
									{% if entity.imagenPrim %}        
									<img class="portada" src="{{ asset('uploads/images/eventos/' ~ entity.imagenPrim) }}" alt=""  />      
									{% else %}
									<img class="portada" src="{{ asset('uploads/images/eventos/image-notfound.jpg') }}" alt="" />            
									{% endif %}
								</a>

							</div>
							<div class="small-6 columns">					
								<p class="lead"><a href="#" data-reveal-id="modal{{ entity.id }}">{{ entity.titulo }}</a>
								</p><hr />
								<p class="lead">	
									{{ entity.fechaPub|date("d \\-\\ m  \\-\\ Y")}}<br>	
									{{entity.descripcion}}
								</p>
								<a onclick="vermas()"data-reveal-id="modal{{ entity.id }}">ver mas...</a>					
							</div>
						</div><hr>
					

						<!--Contenido del Modal -->
						<div id="modal{{ entity.id }}" class="reveal-modal large" data-reveal>
							<div class="row">
								<div class="large-4 columns">
									{% if entity.imagenPrim %}
									<img class="prim" src="{{ asset('uploads/images/eventos/' ~ entity.imagenPrim) }}" alt=""  />      
									{% else %}
									<img class="prim" src="{{ asset('uploads/images/eventos/image-notfound.jpg') }}" alt=""/>
									{% endif %} 
								</div>
								<div class="large-8 columns">
									<p class="lead">{{ entity.titulo }}</p>	<hr>
									<h5>Dia del Evento:</h5>						
									<p>{{ entity.fechaPub|date("d \\-\\ F  \\-\\ Y") }}</p>
									<p>{{ entity.cuerpo | nl2br
 }}</p>
									<h5>Lugar:</h5>
									<p>{{ entity.lugar}}</p>
									{% if entity.imagenSec %}
									<img class="sec" src="{{ asset('uploads/images/eventos/' ~ entity.imagenSec) }}" alt=""/>
									{% else %}
									<img class="sec" src="{{ asset('uploads/images/eventos/image-notfound.jpg') }}" alt=""/>
									{% endif %} 
								</div>
							</div>
							<a class="close-reveal-modal">&#215;</a>
						</div>					
					</li>	
					{% endfor %}
					{% else%}
					<h3>Sin  Eventos</h3>
					{% endif %}
				</ul>
			</div>
		</div>
</div>

<br><br><br><br><br><br><br>

{% endblock %}